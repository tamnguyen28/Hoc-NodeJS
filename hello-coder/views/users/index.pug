extends ../layouts/common.pug

block content

    h1 Minh Tam
        span.mr-3 
        a.btn.btn-primary(href="/users/create") New

    .d-flex.align-items-center
        form.ml-auto(action="products/search", method="GET", class="d-flex")
            input(type="text", name="q", class="form-control")
            button(class="btn btn-primary" style="margin-left:10px") Search
    table.table
        tr
            th Avatar
            th Name
            th Phone
            th Actions
        each user in user1
            tr
                td
                    img(src=user.avatar, width="64")
                td= user.name
                td= user.phone
                td
                    a.btn.btn-light(href='/users/' + user.id) View